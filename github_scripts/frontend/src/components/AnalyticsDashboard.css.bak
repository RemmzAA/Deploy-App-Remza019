/* Analytics Dashboard */

.analytics-dashboard-container {
  padding: 40px 20px;
  background: #0e0e10;
  max-width: 1400px;
  margin: 0 auto;
}

.analytics-header {
  text-align: center;
  margin-bottom: 40px;
}

.analytics-header h2 {
  font-size: 36px;
  color: #efeff1;
  margin-bottom: 10px;
  text-shadow: 0 0 20px rgba(0, 255, 0, 0.4);
}

.analytics-header p {
  font-size: 18px;
  color: #a9a9ac;
}

/* User Overview */
.user-overview-card {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
  margin-bottom: 30px;
}

.overview-stat {
  display: flex;
  align-items: center;
  gap: 15px;
  background: #1a1a1e;
  padding: 20px;
  border-radius: 10px;
  border: 2px solid #464649;
}

.overview-stat .stat-icon {
  font-size: 36px;
}

.overview-stat .stat-label {
  font-size: 12px;
  color: #a9a9ac;
  text-transform: uppercase;
  margin-bottom: 5px;
}

.overview-stat .stat-value {
  font-size: 20px;
  color: #efeff1;
  font-weight: bold;
}

/* Stats Grid */
.analytics-stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
  margin-bottom: 30px;
}

.stat-card {
  background: #1a1a1e;
  padding: 30px;
  border-radius: 10px;
  border: 2px solid #464649;
  text-align: center;
}

.stat-card.highlight {
  border-color: #00ff00;
  background: linear-gradient(135deg, #1a1a1e 0%, #0e3e0e 100%);
}

.stat-card h3 {
  font-size: 16px;
  color: #a9a9ac;
  margin: 0 0 15px 0;
  text-transform: uppercase;
}

.stat-big-value {
  font-size: 48px;
  font-weight: bold;
  color: #00ff00;
}

/* Chart Card */
.chart-card {
  background: #1a1a1e;
  padding: 30px;
  border-radius: 12px;
  border: 2px solid #464649;
  margin-bottom: 30px;
}

.chart-card h3 {
  color: #efeff1;
  margin: 0 0 20px 0;
  font-size: 20px;
}

.chart-wrapper {
  height: 300px;
}

/* Activity Breakdown */
.activity-breakdown-card {
  background: #1a1a1e;
  padding: 30px;
  border-radius: 12px;
  border: 2px solid #464649;
  margin-bottom: 30px;
}

.activity-breakdown-card h3 {
  color: #efeff1;
  margin: 0 0 20px 0;
  font-size: 20px;
}

.activity-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 15px;
}

.activity-item {
  display: flex;
  justify-content: space-between;
  padding: 12px;
  background: #0e0e10;
  border-radius: 6px;
  border: 1px solid #464649;
}

.activity-name {
  color: #efeff1;
  text-transform: capitalize;
}

.activity-count {
  color: #00ff00;
  font-weight: bold;
}

/* Recent Activities */
.recent-activities-card {
  background: #1a1a1e;
  padding: 30px;
  border-radius: 12px;
  border: 2px solid #464649;
  margin-bottom: 30px;
}

.recent-activities-card h3 {
  color: #efeff1;
  margin: 0 0 20px 0;
  font-size: 20px;
}

.activities-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.activity-log-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  background: #0e0e10;
  border-radius: 6px;
  border: 1px solid #464649;
}

.activity-type {
  color: #efeff1;
  font-weight: 600;
  text-transform: capitalize;
}

.activity-points {
  color: #00ff00;
  font-weight: bold;
}

.activity-time {
  color: #a9a9ac;
  font-size: 13px;
}

/* Badges */
.badges-card {
  background: #1a1a1e;
  padding: 30px;
  border-radius: 12px;
  border: 2px solid #464649;
}

.badges-card h3 {
  color: #efeff1;
  margin: 0 0 20px 0;
  font-size: 20px;
}

.badges-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
  gap: 15px;
}

.badge-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 15px;
  background: linear-gradient(135deg, #0e0e10 0%, #2a1a3e 100%);
  border-radius: 8px;
  border: 2px solid #ffb700;
}

.badge-icon {
  font-size: 36px;
}

.badge-name {
  color: #efeff1;
  font-size: 14px;
  font-weight: 600;
  text-align: center;
}

/* Login Prompt */
.analytics-login-prompt,
.analytics-loading,
.analytics-error {
  text-align: center;
  padding: 100px 20px;
  color: #efeff1;
  font-size: 18px;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .user-overview-card {
    grid-template-columns: 1fr;
  }

  .analytics-stats-grid {
    grid-template-columns: 1fr;
  }

  .activity-grid {
    grid-template-columns: 1fr;
  }

  .activity-log-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }

  .chart-wrapper {
    height: 250px;
  }
}
