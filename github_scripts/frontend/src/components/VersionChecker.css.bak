.version-checker {
  position: fixed;
  bottom: 20px;
  right: 20px;
  display: flex;
  align-items: center;
  gap: 10px;
  background: rgba(26, 26, 26, 0.95);
  border: 1px solid #10b981;
  border-radius: 25px;
  padding: 10px 20px;
  backdrop-filter: blur(10px);
  z-index: 1000;
  box-shadow: 0 5px 20px rgba(16, 185, 129, 0.3);
}

.version-info {
  display: flex;
  align-items: center;
  gap: 10px;
}

.version-label {
  color: #10b981;
  font-weight: bold;
  font-size: 14px;
}

.version-name {
  color: #888;
  font-size: 12px;
}

.desktop-badge {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  padding: 3px 10px;
  border-radius: 12px;
  font-size: 11px;
  font-weight: bold;
  animation: desktop-pulse 3s infinite;
}

@keyframes desktop-pulse {
  0%, 100% {
    box-shadow: 0 0 8px rgba(16, 185, 129, 0.4);
  }
  50% {
    box-shadow: 0 0 15px rgba(16, 185, 129, 0.6);
  }
}


.update-badge {
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  color: black;
  padding: 5px 15px;
  border-radius: 15px;
  font-size: 12px;
  font-weight: bold;
  cursor: pointer;
  animation: pulse-glow 2s infinite;
  transition: transform 0.3s;
}

.update-badge:hover {
  transform: scale(1.05);
}

@keyframes pulse-glow {
  0%, 100% {
    box-shadow: 0 0 10px rgba(251, 191, 36, 0.5);
  }
  50% {
    box-shadow: 0 0 20px rgba(251, 191, 36, 0.8);
  }
}

.checking-badge {
  color: #10b981;
  font-size: 12px;
  animation: fade-in-out 1.5s infinite;
}

@keyframes fade-in-out {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}

/* Mobile */
@media (max-width: 768px) {
  .version-checker {
    bottom: 10px;
    right: 10px;
    padding: 8px 15px;
  }
  
  .version-name {
    display: none;
  }
}
