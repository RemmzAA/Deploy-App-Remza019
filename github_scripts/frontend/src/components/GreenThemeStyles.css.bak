   ======================================== */

/* Green Color Palette */
:root {
  --primary-green: #10b981;
  --secondary-green: #059669;
  --accent-green: #34d399;
  --dark-green: #047857;
  --light-green: #6ee7b7;
  --neon-green: #00ff87;
  
  --background-dark: #0a0a0a;
  --background-darker: #050505;
  --surface-dark: #1a1a1a;
  --surface-light: rgba(16, 185, 129, 0.05);
  
  --text-primary: #ffffff;
  --text-secondary: rgba(255, 255, 255, 0.8);
  --text-muted: rgba(255, 255, 255, 0.6);
  
  --border-primary: rgba(16, 185, 129, 0.3);
  --border-secondary: rgba(16, 185, 129, 0.15);
  
  --shadow-green: 0 0 30px rgba(16, 185, 129, 0.3);
  --shadow-green-intense: 0 0 50px rgba(16, 185, 129, 0.5);
  --glow-green: 0 0 15px rgba(16, 185, 129, 0.6);
}

/* ========================================
   MODERN ADMIN PANEL STYLES
   ======================================== */

.modern-admin-panel {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--background-darker), var(--background-dark));
  color: var(--text-primary);
  padding: 2rem 0;
}

.admin-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
}

/* Admin Header */
.admin-header-modern {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2rem 0 3rem;
  border-bottom: 2px solid var(--border-primary);
  margin-bottom: 2rem;
}

.admin-branding .admin-title {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 0.5rem;
}

.admin-branding .brand-number {
  font-family: 'Orbitron', monospace;
  font-size: 2.5rem;
  font-weight: 900;
  color: var(--primary-green);
  text-shadow: var(--glow-green);
}

.admin-branding .brand-text {
  font-family: 'Space Mono', monospace;
  font-size: 2rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-right: 1rem;
}

.admin-branding .admin-label {
  font-size: 1rem;
  color: var(--primary-green);
  font-weight: 600;
  padding: 0.5rem 1rem;
  background: var(--surface-light);
  border: 1px solid var(--border-primary);
  border-radius: 20px;
}

.admin-subtitle {
  font-size: 1.1rem;
  color: var(--text-secondary);
  margin: 0;
}

.admin-user-section {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.user-avatar-admin {
  width: 50px;
  height: 50px;
  background: linear-gradient(135deg, var(--primary-green), var(--secondary-green));
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  color: white;
  font-size: 1.2rem;
}

.user-info-admin .user-name {
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0.2rem;
}

.user-info-admin .user-role {
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.notifications-badge {
  position: relative;
  padding: 0.8rem;
  background: var(--surface-light);
  border: 1px solid var(--border-primary);
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s ease;
}

.notifications-badge:hover {
  background: rgba(16, 185, 129, 0.1);
  transform: scale(1.05);
}

.notification-icon {
  font-size: 1.2rem;
}

.notification-count {
  position: absolute;
  top: -5px;
  right: -5px;
  background: var(--primary-green);
  color: white;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.8rem;
  font-weight: 600;
}

/* Navigation Tabs */
.admin-navigation {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 3rem;
  border-bottom: 1px solid var(--border-secondary);
  overflow-x: auto;
  padding-bottom: 0;
}

.admin-nav-tab {
  display: flex;
  align-items: center;
  gap: 0.8rem;
  padding: 1rem 2rem;
  background: none;
  border: none;
  color: var(--text-secondary);
  cursor: pointer;
  transition: all 0.3s ease;
  border-bottom: 3px solid transparent;
  white-space: nowrap;
  font-size: 1rem;
  font-weight: 500;
}

.admin-nav-tab:hover {
  background: var(--surface-light);
  color: var(--primary-green);
  border-radius: 10px 10px 0 0;
}

.admin-nav-tab.active {
  color: var(--primary-green);
  border-bottom-color: var(--primary-green);
  background: var(--surface-light);
  border-radius: 10px 10px 0 0;
}

.tab-icon {
  font-size: 1.2rem;
}

/* Stats Grid */
.stats-grid-modern {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  margin-bottom: 3rem;
}

.stat-card {
  background: var(--surface-light);
  border: 1px solid var(--border-primary);
  border-radius: 15px;
  padding: 2rem;
  display: flex;
  align-items: center;
  gap: 1.5rem;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, var(--primary-green), var(--accent-green));
}

.stat-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-green);
  border-color: var(--primary-green);
}

.stat-icon {
  font-size: 2.5rem;
  filter: drop-shadow(0 0 10px rgba(16, 185, 129, 0.5));
}

.stat-content .stat-number {
  font-size: 2rem;
  font-weight: 700;
  color: var(--primary-green);
  margin-bottom: 0.3rem;
  font-family: 'Space Mono', monospace;
}

.stat-content .stat-label {
  font-size: 0.9rem;
  color: var(--text-secondary);
  font-weight: 500;
}

/* Dashboard Grid */
.dashboard-grid {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 2rem;
}

.admin-card {
  background: var(--surface-light);
  border: 1px solid var(--border-primary);
  border-radius: 20px;
  padding: 2rem;
  transition: all 0.3s ease;
}

.admin-card:hover {
  border-color: var(--primary-green);
  box-shadow: var(--shadow-green);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--border-secondary);
}

.card-header h3 {
  color: var(--text-primary);
  font-size: 1.3rem;
  font-weight: 600;
  margin: 0;
}

.view-all-btn {
  background: none;
  border: 1px solid var(--border-primary);
  color: var(--primary-green);
  padding: 0.5rem 1rem;
  border-radius: 20px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.9rem;
}

.view-all-btn:hover {
  background: var(--primary-green);
  color: white;
}

/* Activities List */
.activities-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.activity-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  background: rgba(255, 255, 255, 0.02);
  border-radius: 10px;
  border-left: 4px solid var(--primary-green);
  transition: all 0.3s ease;
}

.activity-item:hover {
  background: rgba(16, 185, 129, 0.05);
  transform: translateX(5px);
}

.activity-item.success {
  border-left-color: var(--accent-green);
}

.activity-item.warning {
  border-left-color: #f59e0b;
}

.activity-item.info {
  border-left-color: #3b82f6;
}

.activity-icon {
  font-size: 1.5rem;
  opacity: 0.8;
}

.activity-content .activity-message {
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: 0.3rem;
}

.activity-content .activity-time {
  color: var(--text-muted);
  font-size: 0.8rem;
}

/* Quick Actions */
.quick-actions-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

.quick-action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.8rem;
  padding: 1.5rem;
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid var(--border-secondary);
  border-radius: 12px;
  color: var(--text-secondary);
  cursor: pointer;
  transition: all 0.3s ease;
}

.quick-action-btn:hover {
  background: var(--surface-light);
  border-color: var(--primary-green);
  color: var(--primary-green);
  transform: translateY(-3px);
}

.action-icon {
  font-size: 1.8rem;
}

.action-label {
  font-size: 0.9rem;
  font-weight: 500;
}

/* Projects Table */
.projects-table {
  background: var(--surface-light);
  border: 1px solid var(--border-primary);
  border-radius: 15px;
  overflow: hidden;
}

.table-header {
  display: grid;
  grid-template-columns: 2fr 1.5fr 1fr 1fr 1fr 1fr;
  gap: 1rem;
  padding: 1.5rem;
  background: rgba(16, 185, 129, 0.1);
  border-bottom: 1px solid var(--border-primary);
}

.header-cell {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.table-row {
  display: grid;
  grid-template-columns: 2fr 1.5fr 1fr 1fr 1fr 1fr;
  gap: 1rem;
  padding: 1.5rem;
  border-bottom: 1px solid var(--border-secondary);
  transition: all 0.3s ease;
}

.table-row:hover {
  background: rgba(16, 185, 129, 0.05);
}

.table-cell {
  display: flex;
  align-items: center;
}

.project-name {
  font-weight: 600;
  color: var(--text-primary);
}

.client-name {
  color: var(--text-secondary);
}

.status-badge {
  padding: 0.4rem 0.8rem;
  border-radius: 15px;
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
}

.status-completed {
  background: rgba(16, 185, 129, 0.2);
  color: var(--accent-green);
  border: 1px solid rgba(16, 185, 129, 0.3);
}

.status-progress {
  background: rgba(59, 130, 246, 0.2);
  color: #60a5fa;
  border: 1px solid rgba(59, 130, 246, 0.3);
}

.status-planning {
  background: rgba(245, 158, 11, 0.2);
  color: #fbbf24;
  border: 1px solid rgba(245, 158, 11, 0.3);
}

.progress-bar-container {
  display: flex;
  align-items: center;
  gap: 0.8rem;
  width: 100%;
}

.progress-bar {
  flex: 1;
  height: 8px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-green), var(--accent-green));
  border-radius: 4px;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 0.8rem;
  color: var(--text-secondary);
  min-width: 35px;
}

.deadline {
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.action-buttons {
  display: flex;
  gap: 0.5rem;
}

.action-btn {
  width: 35px;
  height: 35px;
  border: 1px solid var(--border-secondary);
  background: none;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn:hover {
  border-color: var(--primary-green);
  background: var(--surface-light);
}

/* Buttons */
.primary-btn,
.secondary-btn {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.8rem 1.5rem;
  border-radius: 10px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.9rem;
}

.primary-btn {
  background: linear-gradient(135deg, var(--primary-green), var(--secondary-green));
  color: white;
  border: none;
}

.primary-btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-green);
}

.secondary-btn {
  background: var(--surface-light);
  color: var(--primary-green);
  border: 1px solid var(--border-primary);
}

.secondary-btn:hover {
  background: rgba(16, 185, 129, 0.1);
  transform: translateY(-2px);
}

/* Content Placeholders */
.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--border-primary);
}

.content-header h2 {
  color: var(--text-primary);
  font-size: 1.8rem;
  font-weight: 700;
  margin: 0;
}

.content-placeholder {
  text-align: center;
  padding: 4rem 2rem;
  color: var(--text-muted);
}

.placeholder-icon {
  font-size: 4rem;
  margin-bottom: 1rem;
  opacity: 0.6;
}

.placeholder-text {
  font-size: 1.3rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: var(--text-secondary);
}

.placeholder-subtitle {
  font-size: 1rem;
  color: var(--text-muted);
}

/* Settings */
.settings-sections {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 2rem;
}

.settings-section {
  background: var(--surface-light);
  border: 1px solid var(--border-primary);
  border-radius: 15px;
  padding: 2rem;
}

.settings-section h3 {
  color: var(--primary-green);
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 1.5rem;
  border-bottom: 1px solid var(--border-secondary);
  padding-bottom: 0.5rem;
}

.settings-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.form-group label {
  color: var(--text-secondary);
  font-weight: 500;
  font-size: 0.9rem;
}

.form-group input,
.form-group select {
  padding: 0.8rem;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid var(--border-secondary);
  border-radius: 8px;
  color: var(--text-primary);
  font-size: 0.9rem;
  transition: all 0.3s ease;
}

.form-group input:focus,
.form-group select:focus {
  outline: none;
  border-color: var(--primary-green);
  box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
}

/* ========================================
   MODERN FREELANCER PANEL STYLES
   ======================================== */

.modern-freelancer-panel {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--background-darker), var(--background-dark));
  color: var(--text-primary);
  padding: 4rem 0;
}

.freelancer-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
}

/* Freelancer Header */
.freelancer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 3rem;
  padding-bottom: 2rem;
  border-bottom: 2px solid var(--border-primary);
}

.header-content .section-title {
  display: flex;
  align-items: center;
  gap: 1rem;
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.title-icon {
  font-size: 2rem;
  filter: drop-shadow(0 0 10px rgba(16, 185, 129, 0.5));
}

.header-content .section-subtitle {
  font-size: 1.1rem;
  color: var(--text-secondary);
  margin: 0;
}

.header-stats {
  display: flex;
  gap: 2rem;
}

.stat-item {
  text-align: center;
  padding: 1rem;
  background: var(--surface-light);
  border: 1px solid var(--border-primary);
  border-radius: 12px;
  min-width: 80px;
}

.stat-item .stat-number {
  display: block;
  font-size: 1.8rem;
  font-weight: 700;
  color: var(--primary-green);
  font-family: 'Space Mono', monospace;
}

.stat-item .stat-label {
  font-size: 0.8rem;
  color: var(--text-secondary);
  margin-top: 0.3rem;
}

/* Controls */
.freelancer-controls {
  display: flex;
  gap: 2rem;
  margin-bottom: 2rem;
  align-items: center;
  flex-wrap: wrap;
}

.search-section {
  flex: 1;
  min-width: 300px;
}

.search-input-container {
  position: relative;
}

.search-input {
  width: 100%;
  padding: 1rem 3rem 1rem 1rem;
  background: var(--surface-light);
  border: 1px solid var(--border-primary);
  border-radius: 25px;
  color: var(--text-primary);
  font-size: 1rem;
  transition: all 0.3s ease;
}

.search-input:focus {
  outline: none;
  border-color: var(--primary-green);
  box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
}

.search-input::placeholder {
  color: var(--text-muted);
}

.search-icon {
  position: absolute;
  right: 1rem;
  top: 50%;
  transform: translateY(-50%);
  color: var(--text-muted);
  font-size: 1.2rem;
}

.filter-section {
  display: flex;
  gap: 1rem;
}

.skill-filter,
.sort-filter {
  padding: 1rem 1.5rem;
  background: var(--surface-light);
  border: 1px solid var(--border-primary);
  border-radius: 25px;
  color: var(--text-primary);
  font-size: 0.9rem;
  min-width: 150px;
  cursor: pointer;
}

/* Results Summary */
.results-summary {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 2rem;
  color: var(--text-secondary);
}

.results-count {
  font-weight: 600;
  color: var(--primary-green);
}

.search-term {
  font-style: italic;
}

/* Freelancers Grid */
.freelancers-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 2rem;
}

.freelancer-card-modern {
  background: var(--surface-light);
  border: 1px solid var(--border-primary);
  border-radius: 20px;
  padding: 0;
  overflow: hidden;
  transition: all 0.3s ease;
  opacity: 0;
  animation: slideInUp 0.6s ease forwards;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.freelancer-card-modern:hover {
  transform: translateY(-5px);
  border-color: var(--primary-green);
  box-shadow: var(--shadow-green);
}

/* Card Header */
.freelancer-card-modern .card-header {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  padding: 2rem;
  background: rgba(16, 185, 129, 0.02);
  border-bottom: 1px solid var(--border-secondary);
  margin-bottom: 0;
}

.freelancer-avatar-container {
  position: relative;
}

.freelancer-avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  border: 3px solid var(--border-primary);
  object-fit: cover;
}

.availability-indicator {
  position: absolute;
  bottom: 2px;
  right: 2px;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  border: 3px solid var(--background-dark);
  display: flex;
  align-items: center;
  justify-content: center;
}

.availability-indicator.available {
  background: var(--accent-green);
}

.availability-indicator.busy {
  background: #f59e0b;
}

.availability-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: white;
}

.freelancer-basic-info {
  flex: 1;
}

.freelancer-basic-info .freelancer-name {
  font-size: 1.4rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 0.3rem;
}

.freelancer-basic-info .freelancer-title {
  font-size: 1rem;
  color: var(--primary-green);
  margin-bottom: 0.5rem;
  font-weight: 500;
}

.freelancer-rating {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.9rem;
}

.rating-stars {
  color: #fbbf24;
}

.rating-number {
  color: var(--text-primary);
  font-weight: 600;
}

.projects-count {
  color: var(--text-muted);
}

.freelancer-rate {
  text-align: right;
}

.rate-amount {
  display: block;
  font-size: 1.3rem;
  font-weight: 700;
  color: var(--primary-green);
  margin-bottom: 0.3rem;
}

.response-time {
  font-size: 0.8rem;
  color: var(--text-muted);
}

/* Card Content */
.freelancer-card-modern .card-content {
  padding: 2rem;
}

.freelancer-card-modern .freelancer-bio {
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 1.5rem;
  font-size: 0.95rem;
}

.freelancer-card-modern .freelancer-skills {
  display: flex;
  flex-wrap: wrap;
  gap: 0.6rem;
}

.skill-tag-modern {
  padding: 0.4rem 0.8rem;
  background: rgba(16, 185, 129, 0.1);
  color: var(--primary-green);
  border: 1px solid var(--border-primary);
  border-radius: 15px;
  font-size: 0.8rem;
  font-weight: 500;
  transition: all 0.3s ease;
}

.skill-tag-modern:hover {
  background: rgba(16, 185, 129, 0.2);
  transform: translateY(-2px);
}

/* Card Actions */
.card-actions {
  display: flex;
  gap: 1rem;
  padding: 0 2rem 2rem;
}

.contact-btn,
.portfolio-btn {
  display: flex;
  align-items: center;
  gap: 0.8rem;
  padding: 0.8rem 1.5rem;
  border-radius: 12px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.9rem;
  flex: 1;
  justify-content: center;
}

.contact-btn.primary {
  background: linear-gradient(135deg, var(--primary-green), var(--secondary-green));
  color: white;
  border: none;
}

.contact-btn.primary:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-green);
}

.portfolio-btn.secondary {
  background: var(--surface-light);
  color: var(--primary-green);
  border: 1px solid var(--border-primary);
}

.portfolio-btn.secondary:hover {
  background: rgba(16, 185, 129, 0.1);
  transform: translateY(-2px);
}

.btn-icon {
  font-size: 1rem;
}

/* Card Footer */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 2rem;
  background: rgba(255, 255, 255, 0.02);
  border-top: 1px solid var(--border-secondary);
}

.card-footer .availability-badge {
  padding: 0.4rem 0.8rem;
  border-radius: 15px;
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
}

.card-footer .availability-badge.available {
  background: rgba(16, 185, 129, 0.2);
  color: var(--accent-green);
  border: 1px solid rgba(16, 185, 129, 0.3);
}

.card-footer .availability-badge.busy {
  background: rgba(245, 158, 11, 0.2);
  color: #fbbf24;
  border: 1px solid rgba(245, 158, 11, 0.3);
}

.quick-stats {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.quick-stat {
  display: flex;
  align-items: center;
  gap: 0.3rem;
  font-size: 0.8rem;
  color: var(--text-muted);
}

.stat-icon {
  font-size: 0.9rem;
}

/* Loading State */
.loading-state {
  text-align: center;
  padding: 4rem 2rem;
  color: var(--text-muted);
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid var(--border-secondary);
  border-top: 3px solid var(--primary-green);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 1rem;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* No Results */
.no-results {
  text-align: center;
  padding: 4rem 2rem;
  color: var(--text-muted);
}

.no-results-icon {
  font-size: 4rem;
  margin-bottom: 1rem;
  opacity: 0.6;
}

.no-results h3 {
  color: var(--text-secondary);
  margin-bottom: 0.5rem;
}

.clear-filters-btn {
  margin-top: 1rem;
  padding: 0.8rem 1.5rem;
  background: var(--primary-green);
  color: white;
  border: none;
  border-radius: 25px;
  cursor: pointer;
  font-weight: 600;
  transition: all 0.3s ease;
}

.clear-filters-btn:hover {
  background: var(--secondary-green);
  transform: translateY(-2px);
}

/* ========================================
   RESPONSIVE DESIGN
   ======================================== */

@media (max-width: 1200px) {
  .dashboard-grid {
    grid-template-columns: 1fr;
  }
  
  .table-header,
  .table-row {
    grid-template-columns: 2fr 1fr 1fr 1fr;
    font-size: 0.9rem;
  }
  
  .table-cell:nth-child(2),
  .header-cell:nth-child(2) {
    display: none;
  }
  
  .table-cell:nth-child(6),
  .header-cell:nth-child(6) {
    display: none;
  }
}

@media (max-width: 768px) {
  .admin-container,
  .freelancer-container {
    padding: 0 1rem;
  }
  
  .admin-header-modern,
  .freelancer-header {
    flex-direction: column;
    gap: 2rem;
    text-align: center;
  }
  
  .admin-user-section {
    order: -1;
  }
  
  .header-stats {
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }
  
  .stats-grid-modern {
    grid-template-columns: 1fr;
  }
  
  .freelancer-controls {
    flex-direction: column;
    gap: 1rem;
  }
  
  .search-section {
    min-width: auto;
  }
  
  .filter-section {
    flex-wrap: wrap;
  }
  
  .freelancers-grid {
    grid-template-columns: 1fr;
  }
  
  .freelancer-card-modern .card-header {
    flex-direction: column;
    text-align: center;
    gap: 1rem;
  }
  
  .freelancer-rate {
    text-align: center;
  }
  
  .card-actions {
    flex-direction: column;
  }
  
  .admin-navigation {
    flex-wrap: wrap;
    justify-content: center;
  }
  
  .admin-nav-tab {
    padding: 0.8rem 1.5rem;
  }
  
  .quick-actions-grid {
    grid-template-columns: 1fr;
  }
  
  .settings-sections {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 480px) {
  .admin-branding .brand-number {
    font-size: 2rem;
  }
  
  .admin-branding .brand-text {
    font-size: 1.5rem;
  }
  
  .header-content .section-title {
    font-size: 2rem;
  }
  
  .stat-card {
    flex-direction: column;
    text-align: center;
    gap: 1rem;
  }
  
  .table-header,
  .table-row {
    grid-template-columns: 1fr;
    gap: 0.5rem;
  }
  
  .table-cell {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--border-secondary);
  }
  
  .table-cell:last-child {
    border-bottom: none;
  }
}