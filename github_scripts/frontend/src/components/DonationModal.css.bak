/* Donation Modal Styles */
.donation-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
  padding: 20px;
  overflow-y: auto;
}

.donation-modal {
  background: linear-gradient(135deg, rgba(0, 20, 10, 0.98), rgba(0, 40, 20, 0.98));
  border: 2px solid rgba(16, 185, 129, 0.5);
  border-radius: 20px;
  max-width: 900px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 20px 60px rgba(16, 185, 129, 0.3);
}

.donation-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25px 30px;
  border-bottom: 1px solid rgba(16, 185, 129, 0.3);
}

.donation-modal-header h2 {
  color: #10b981;
  font-size: 28px;
  margin: 0;
  font-weight: 700;
  text-shadow: 0 0 20px rgba(16, 185, 129, 0.5);
}

.donation-modal-header .close-btn {
  background: rgba(16, 185, 129, 0.1);
  border: 1px solid rgba(16, 185, 129, 0.3);
  color: #10b981;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  cursor: pointer;
  font-size: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.donation-modal-header .close-btn:hover {
  background: rgba(16, 185, 129, 0.2);
  transform: rotate(90deg);
}

.donation-modal-content {
  padding: 30px;

/* Donation Disclaimer - PROMINENT */
.donation-disclaimer {
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.15), rgba(234, 88, 12, 0.15));
  border: 2px solid rgba(245, 158, 11, 0.5);
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 25px;
  color: #fbbf24;
  font-size: 16px;
  font-weight: 600;
  text-align: center;
  text-shadow: 0 0 10px rgba(251, 191, 36, 0.3);
  animation: disclaimerPulse 2s ease-in-out infinite;
}

@keyframes disclaimerPulse {
  0%, 100% {
    box-shadow: 0 0 15px rgba(245, 158, 11, 0.3);
  }
  50% {
    box-shadow: 0 0 25px rgba(245, 158, 11, 0.6);
  }
}

}

/* Donation Stats Banner */
.donation-stats-banner {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
  margin-bottom: 30px;
  padding: 20px;
  background: rgba(16, 185, 129, 0.05);
  border: 1px solid rgba(16, 185, 129, 0.2);
  border-radius: 12px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-label {
  color: rgba(16, 185, 129, 0.8);
  font-size: 14px;
  margin-bottom: 8px;
}

.stat-value {
  color: #10b981;
  font-size: 32px;
  font-weight: 700;
  text-shadow: 0 0 15px rgba(16, 185, 129, 0.5);
}

/* Donation Packages */
.donation-packages {
  margin-bottom: 30px;
}

.donation-packages h3 {
  color: #10b981;
  font-size: 22px;
  margin-bottom: 20px;
  text-align: center;
}

.packages-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 15px;
  margin-bottom: 20px;
}

.package-card {
  background: rgba(16, 185, 129, 0.05);
  border: 2px solid rgba(16, 185, 129, 0.3);
  border-radius: 12px;
  padding: 20px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: center;
}

.package-card:hover {
  border-color: #10b981;
  background: rgba(16, 185, 129, 0.1);
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(16, 185, 129, 0.3);
}

.package-card.selected {
  border-color: #10b981;
  background: rgba(16, 185, 129, 0.15);
  box-shadow: 0 0 30px rgba(16, 185, 129, 0.4);
}

.package-icon {
  font-size: 48px;
  margin-bottom: 12px;
}

.package-name {
  color: #10b981;
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 8px;
}

.package-amount {
  color: #fff;
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 10px;
  text-shadow: 0 0 10px rgba(16, 185, 129, 0.3);
}

.package-description {
  color: rgba(255, 255, 255, 0.7);
  font-size: 14px;
  margin-bottom: 15px;
  line-height: 1.5;
}

.package-features {
  list-style: none;
  padding: 0;
  margin: 0;
  text-align: left;
}

.package-features li {
  color: rgba(255, 255, 255, 0.6);
  font-size: 13px;
  padding: 5px 0;
  padding-left: 20px;
  position: relative;
}

.package-features li:before {
  content: "âœ“";
  position: absolute;
  left: 0;
  color: #10b981;
  font-weight: bold;
}

/* Custom Amount Input */
.custom-amount-input {
  margin-bottom: 25px;
  padding: 20px;
  background: rgba(16, 185, 129, 0.05);
  border: 1px solid rgba(16, 185, 129, 0.2);
  border-radius: 12px;
}

.custom-amount-input label {
  display: block;
  color: #10b981;
  font-size: 16px;
  margin-bottom: 10px;
  font-weight: 600;
}

.custom-amount-input input {
  width: 100%;
  padding: 12px 15px;
  background: rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(16, 185, 129, 0.3);
  border-radius: 8px;
  color: #fff;
  font-size: 18px;
  transition: all 0.3s ease;
}

.custom-amount-input input:focus {
  outline: none;
  border-color: #10b981;
  box-shadow: 0 0 15px rgba(16, 185, 129, 0.3);
}

/* Donor Information */
.donor-info {
  margin-bottom: 25px;
  padding: 20px;
  background: rgba(16, 185, 129, 0.05);
  border: 1px solid rgba(16, 185, 129, 0.2);
  border-radius: 12px;
}

.donor-info h3 {
  color: #10b981;
  font-size: 18px;
  margin-bottom: 20px;
}

.form-group {
  margin-bottom: 20px;
}

.form-group label {
  display: block;
  color: rgba(16, 185, 129, 0.9);
  font-size: 14px;
  margin-bottom: 8px;
  font-weight: 500;
}

.form-group input,
.form-group textarea {
  width: 100%;
  padding: 12px 15px;
  background: rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(16, 185, 129, 0.3);
  border-radius: 8px;
  color: #fff;
  font-size: 16px;
  font-family: inherit;
  transition: all 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus {
  outline: none;
  border-color: #10b981;
  box-shadow: 0 0 15px rgba(16, 185, 129, 0.2);
}

.form-group textarea {
  resize: vertical;
}

/* Error Message */
.error-message {
  background: rgba(239, 68, 68, 0.1);
  border: 1px solid rgba(239, 68, 68, 0.5);
  color: #ef4444;
  padding: 15px;
  border-radius: 8px;
  margin-bottom: 20px;
  text-align: center;
}

/* Donate Button */
.donate-btn {
  width: 100%;
  padding: 18px;
  background: linear-gradient(135deg, #10b981, #059669);
  border: none;
  border-radius: 12px;
  color: #fff;
  font-size: 20px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-bottom: 25px;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  box-shadow: 0 5px 20px rgba(16, 185, 129, 0.4);
}

.donate-btn:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 10px 30px rgba(16, 185, 129, 0.6);
}

.donate-btn:active:not(:disabled) {
  transform: translateY(0);
}

.donate-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* Recent Donations */
.recent-donations {
  margin-bottom: 25px;
  padding: 20px;
  background: rgba(16, 185, 129, 0.05);
  border: 1px solid rgba(16, 185, 129, 0.2);
  border-radius: 12px;
}

.recent-donations h3 {
  color: #10b981;
  font-size: 20px;
  margin-bottom: 20px;
  text-align: center;
}

.donations-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.donation-item {
  background: rgba(0, 0, 0, 0.3);
  padding: 15px;
  border-radius: 10px;
  border: 1px solid rgba(16, 185, 129, 0.2);
}

.donor-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.donor-name {
  color: #10b981;
  font-weight: 600;
  font-size: 16px;
}

.donation-amount {
  color: #fff;
  font-weight: 700;
  font-size: 18px;
}

.donation-message {
  color: rgba(255, 255, 255, 0.8);
  font-style: italic;
  font-size: 14px;
  margin-bottom: 8px;
  padding-left: 15px;
  border-left: 2px solid rgba(16, 185, 129, 0.3);
}

.donation-date {
  color: rgba(255, 255, 255, 0.5);
  font-size: 12px;
  text-align: right;
}

/* Secure Notice */
.secure-notice {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 15px;
  background: rgba(16, 185, 129, 0.05);
  border: 1px solid rgba(16, 185, 129, 0.2);
  border-radius: 8px;
  color: rgba(255, 255, 255, 0.7);
  font-size: 14px;
}

.secure-icon {
  font-size: 18px;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .donation-modal {
    margin: 10px;
    max-height: 95vh;
  }

  .donation-modal-header {
    padding: 20px;
  }

  .donation-modal-header h2 {
    font-size: 22px;
  }

  .donation-modal-content {
    padding: 20px;
  }

  .packages-grid {
    grid-template-columns: 1fr;
  }

  .donation-stats-banner {
    grid-template-columns: 1fr;
    gap: 15px;
  }

  .stat-value {
    font-size: 24px;
  }

  .donate-btn {
    font-size: 18px;
    padding: 15px;
  }
}

/* Scrollbar Styling */
.donation-modal::-webkit-scrollbar {
  width: 8px;
}

.donation-modal::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 10px;
}

.donation-modal::-webkit-scrollbar-thumb {
  background: rgba(16, 185, 129, 0.5);
  border-radius: 10px;
}

.donation-modal::-webkit-scrollbar-thumb:hover {
  background: rgba(16, 185, 129, 0.7);
}
