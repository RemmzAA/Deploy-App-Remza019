/* Clips Gallery */

.clips-gallery-container {
  padding: 40px 20px;
  background: #0e0e10;
  min-height: 600px;
}

.clips-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
  flex-wrap: wrap;
  gap: 20px;
}

.clips-header h2 {
  font-size: 32px;
  color: #efeff1;
  margin: 0;
  text-shadow: 0 0 15px rgba(0, 255, 0, 0.4);
}

.time-range-selector {
  display: flex;
  gap: 10px;
}

.time-range-selector button {
  padding: 8px 20px;
  background: #1a1a1e;
  color: #efeff1;
  border: 2px solid #464649;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-weight: 600;
}

.time-range-selector button:hover {
  border-color: #00ff00;
  background: #252529;
}

.time-range-selector button.active {
  background: #00ff00;
  color: #000;
  border-color: #00ff00;
}

.clips-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 25px;
}

.clip-card {
  background: #1a1a1e;
  border-radius: 10px;
  overflow: hidden;
  border: 2px solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.clip-card:hover {
  transform: translateY(-5px);
  border-color: #00ff00;
  box-shadow: 0 8px 25px rgba(0, 255, 0, 0.3);
}

.clip-thumbnail-wrapper {
  position: relative;
  width: 100%;
  padding-top: 56.25%;
  overflow: hidden;
  background: #000;
}

.clip-thumbnail {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.clip-duration {
  position: absolute;
  bottom: 8px;
  right: 8px;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: bold;
}

.highlight-badge {
  position: absolute;
  top: 8px;
  left: 8px;
  background: linear-gradient(135deg, #ffb700 0%, #ff9500 100%);
  color: #000;
  padding: 4px 10px;
  border-radius: 4px;
  font-size: 11px;
  font-weight: bold;
}

.clip-info {
  padding: 15px;
}

.clip-title {
  font-size: 16px;
  color: #efeff1;
  margin: 0 0 5px 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.clip-creator {
  font-size: 13px;
  color: #a9a9ac;
  margin: 0 0 10px 0;
}

.clip-stats {
  display: flex;
  gap: 15px;
  margin-bottom: 12px;
  font-size: 14px;
  color: #a9a9ac;
}

.clip-stats .stat {
  display: flex;
  align-items: center;
  gap: 5px;
}

.clip-reactions {
  display: flex;
  gap: 8px;
  border-top: 1px solid #464649;
  padding-top: 12px;
}

.reaction-btn {
  background: none;
  border: 1px solid #464649;
  border-radius: 6px;
  padding: 6px 12px;
  font-size: 18px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.reaction-btn:hover {
  transform: scale(1.15);
  border-color: #00ff00;
}

.no-clips {
  text-align: center;
  padding: 100px 20px;
  color: #a9a9ac;
  font-size: 18px;
}

.clips-loading {
  text-align: center;
  padding: 100px 20px;
  color: #efeff1;
  font-size: 18px;
}

@media (max-width: 768px) {
  .clips-header {
    flex-direction: column;
    align-items: flex-start;
  }

  .time-range-selector {
    width: 100%;
    overflow-x: auto;
  }

  .clips-grid {
    grid-template-columns: 1fr;
  }
}