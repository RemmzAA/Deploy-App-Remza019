.predictions-widget {
  background: rgba(26, 26, 26, 0.9);
  border: 2px solid #10b981;
  border-radius: 15px;
  padding: 25px;
  margin: 30px 0;
  backdrop-filter: blur(10px);
}

.predictions-title {
  color: #10b981;
  font-size: 24px;
  margin-bottom: 20px;
  text-shadow: 0 0 10px rgba(16, 185, 129, 0.5);
  text-align: center;
}

.prediction-widget-card {
  background: rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(16, 185, 129, 0.3);
  border-radius: 10px;
  padding: 20px;
  margin-bottom: 20px;
  transition: all 0.3s;
}

.prediction-widget-card:hover {
  border-color: #10b981;
  box-shadow: 0 5px 20px rgba(16, 185, 129, 0.3);
}

.prediction-widget-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25px;
  padding-bottom: 15px;
  border-bottom: 1px solid rgba(16, 185, 129, 0.2);
}

.prediction-widget-header h4 {
  color: #10b981;
  font-size: 20px;
  margin: 0;
}

.prediction-widget-votes {
  background: rgba(16, 185, 129, 0.2);
  padding: 5px 15px;
  border-radius: 20px;
  font-size: 14px;
  color: #10b981;
  white-space: nowrap;
}

.prediction-widget-options {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  gap: 20px;
  margin-bottom: 20px;
  align-items: center;
}

.prediction-option {
  position: relative;
  background: rgba(16, 185, 129, 0.05);
  border: 2px solid rgba(16, 185, 129, 0.3);
  border-radius: 10px;
  padding: 20px;
  cursor: pointer;
  transition: all 0.3s;
  text-align: center;
  min-height: 120px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.prediction-option:hover:not(:disabled) {
  border-color: #10b981;
  transform: scale(1.05);
  box-shadow: 0 0 20px rgba(16, 185, 129, 0.4);
}

.prediction-option:disabled {
  cursor: not-allowed;
  opacity: 0.7;
}

.prediction-option.selected {
  border-color: #fbbf24;
  background: rgba(251, 191, 36, 0.1);
  box-shadow: 0 0 15px rgba(251, 191, 36, 0.3);
}

.prediction-label {
  font-size: 32px;
  font-weight: bold;
  color: #10b981;
  margin-bottom: 10px;
}

.prediction-text {
  font-size: 18px;
  color: white;
  font-weight: bold;
  margin-bottom: 10px;
}

.prediction-votes {
  font-size: 14px;
  color: #10b981;
  margin-top: 10px;
}

.winner-badge {
  position: absolute;
  top: 10px;
  right: 10px;
  background: linear-gradient(135deg, #ffd700 0%, #ffa500 100%);
  color: black;
  padding: 5px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: bold;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.vs-divider {
  font-size: 28px;
  font-weight: bold;
  color: #10b981;
  text-shadow: 0 0 10px rgba(16, 185, 129, 0.5);
}

.prediction-widget-footer {
  text-align: center;
  margin-top: 20px;
  padding-top: 15px;
  border-top: 1px solid rgba(16, 185, 129, 0.2);
}

.prediction-reward {
  color: #fbbf24;
  font-size: 16px;
  font-weight: bold;
}

.prediction-waiting {
  color: #fbbf24;
  font-size: 16px;
  font-weight: bold;
}

.prediction-resolved {
  color: #10b981;
  font-size: 16px;
  font-weight: bold;
}

/* Responsive */
@media (max-width: 768px) {
  .predictions-widget {
    padding: 15px;
  }
  
  .predictions-title {
    font-size: 20px;
  }
  
  .prediction-widget-header {
    flex-direction: column;
    gap: 10px;
  }
  
  .prediction-widget-options {
    grid-template-columns: 1fr;
    gap: 15px;
  }
  
  .vs-divider {
    font-size: 20px;
  }
  
  .prediction-option {
    min-height: 100px;
  }
  
  .prediction-label {
    font-size: 24px;
  }
  
  .prediction-text {
    font-size: 16px;
  }
}
