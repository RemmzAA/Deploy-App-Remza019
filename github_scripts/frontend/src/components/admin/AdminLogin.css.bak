/* REMZA019 Gaming Admin Login Styles */

.admin-login-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #000000 0%, #0a0a0a 50%, #000000 100%);
  position: relative;
  overflow: hidden;
  font-family: 'Montserrat', sans-serif;
}

.matrix-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  opacity: 0.3;
}

#matrix-canvas {
  width: 100%;
  height: 100%;
}

.login-form-container {
  background: rgba(16, 185, 129, 0.1);
  border: 2px solid rgba(16, 185, 129, 0.3);
  border-radius: 20px;
  padding: 3rem 2.5rem;
  max-width: 450px;
  width: 90%;
  position: relative;
  z-index: 10;
  backdrop-filter: blur(10px);
  box-shadow: 
    0 20px 40px rgba(16, 185, 129, 0.2),
    0 0 60px rgba(16, 185, 129, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

.login-header {
  text-align: center;
  margin-bottom: 2.5rem;
}

.login-header h1 {
  font-family: 'Cinzel', 'UnifrakturMaguntia', serif;
  font-size: 2.2rem;
  font-weight: 900;
  letter-spacing: 2px;
  background: linear-gradient(45deg, #00ff00, #00ccff, #00ffcc);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 
    -1px -1px 0 #000, 1px -1px 0 #000, 
    -1px 1px 0 #000, 1px 1px 0 #000,
    0 0 10px rgba(0, 255, 0, 0.5);
  margin-bottom: 0.5rem;
}

.login-header h2 {
  color: rgba(255, 255, 255, 0.8);
  font-size: 1.1rem;
  font-weight: 600;
  letter-spacing: 1px;
}

.login-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.input-group label {
  color: #10b981;
  font-weight: 600;
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.input-group input {
  padding: 1rem;
  border: 2px solid rgba(16, 185, 129, 0.3);
  border-radius: 12px;
  background: rgba(0, 0, 0, 0.3);
  color: white;
  font-size: 1rem;
  font-family: 'Montserrat', sans-serif;
  transition: all 0.3s ease;
}

.input-group input:focus {
  outline: none;
  border-color: #10b981;
  box-shadow: 0 0 20px rgba(16, 185, 129, 0.4);
  transform: translateY(-2px);
}

.input-group input::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.input-group input:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.error-message {
  background: rgba(239, 68, 68, 0.2);
  border: 1px solid rgba(239, 68, 68, 0.5);
  color: #fca5a5;
  padding: 1rem;
  border-radius: 12px;
  text-align: center;
  font-weight: 600;
}

.login-button {
  padding: 1.2rem 2rem;
  background: linear-gradient(135deg, #10b981, #06b6d4);
  border: none;
  border-radius: 12px;
  color: white;
  font-size: 1.1rem;
  font-weight: 700;
  font-family: 'Montserrat', sans-serif;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-top: 1rem;
}

.login-button:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(16, 185, 129, 0.4);
}

.login-button:disabled {
  opacity: 0.7;
  cursor: not-allowed;
  transform: none;
}

.loading-spinner {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: white;
  animation: spin 1s linear infinite;
  margin-right: 10px;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.login-footer {
  text-align: center;
  margin-top: 2rem;
  color: rgba(255, 255, 255, 0.6);
  font-size: 0.9rem;
}

.login-footer p {
  margin: 0.5rem 0;
}

.login-footer p:last-child {
  color: rgba(16, 185, 129, 0.8);
  font-weight: 600;
}

/* Mobile Optimization - ENHANCED */
@media (max-width: 768px) {
  .admin-login-container {
    padding: 1rem;
  }
  
  .login-form-container {
    padding: 2rem 1.5rem;
    max-width: 100%;
    width: 95%;
  }
  
  .login-header h1 {
    font-size: 1.8rem;
    letter-spacing: 1px;
  }
  
  .login-header h2 {
    font-size: 0.95rem;
  }
  
  .input-group {
    gap: 0.4rem;
  }
  
  .input-group label {
    font-size: 0.85rem;
  }
  
  .input-group input {
    padding: 1rem;
    font-size: 1.05rem;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
  }
  
  .login-button {
    padding: 1.2rem;
    font-size: 1.05rem;
    width: 100%;
  }
  
  .error-message {
    padding: 0.8rem;
    font-size: 0.9rem;
  }
}

@media (max-width: 480px) {
  .login-form-container {
    padding: 1.5rem 1rem;
    width: 100%;
    border-radius: 15px;
  }
  
  .login-header {
    margin-bottom: 1.5rem;
  }
  
  .login-header h1 {
    font-size: 1.5rem;
  }
  
  .login-header h2 {
    font-size: 0.85rem;
  }
  
  .login-form {
    gap: 1.2rem;
  }
}