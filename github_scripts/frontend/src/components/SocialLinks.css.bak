.social-links-container{margin:3rem 0;padding:2rem;background:linear-gradient(135deg,rgba(16,185,129,.1),rgba(5,150,105,.1));border:2px solid rgba(16,185,129,.3);border-radius:20px;text-align:center}.social-links-container h3{color:var(--matrix-color);font-size:1.5rem;margin-bottom:1.5rem;text-shadow:0 0 15px var(--matrix-color)}.social-icons{display:flex;justify-content:center;gap:1.5rem;flex-wrap:wrap}.social-icon{width:60px;height:60px;border-radius:50%;display:flex;align-items:center;justify-content:center;font-size:2rem;text-decoration:none;transition:all .3s ease;border:2px solid;box-shadow:0 5px 15px rgba(0,0,0,.3)}.social-icon:hover{transform:translateY(-5px) scale(1.1)}.twitter{background:linear-gradient(135deg,#1da1f2,#0d8bd9);border-color:#1da1f2;color:#fff}.twitter:hover{box-shadow:0 10px 30px rgba(29,161,242,.6)}.instagram{background:linear-gradient(135deg,#e1306c,#fd1d1d,#f77737);border-color:#e1306c;color:#fff}.instagram:hover{box-shadow:0 10px 30px rgba(225,48,108,.6)}.twitch{background:linear-gradient(135deg,#9146ff,#772ce8);border-color:#9146ff;color:#fff}.twitch:hover{box-shadow:0 10px 30px rgba(145,70,255,.6)}.tiktok{background:linear-gradient(135deg,#000,#fe2c55);border-color:#fe2c55;color:#fff}.tiktok:hover{box-shadow:0 10px 30px rgba(254,44,85,.6)}.discord{background:linear-gradient(135deg,#5865f2,#404eed);border-color:#5865f2;color:#fff}.discord:hover{box-shadow:0 10px 30px rgba(88,101,242,.6)}@media (max-width:768px){.social-icon{width:50px;height:50px;font-size:1.5rem}}