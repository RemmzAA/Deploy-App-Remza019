/* Customization Modal */

.customization-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.85);
  backdrop-filter: blur(10px);
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 1rem;
  overflow-y: auto;
}

.customization-modal-container {
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
  border: 3px solid #3b82f6;
  border-radius: 25px;
  max-width: 700px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 20px 60px rgba(59, 130, 246, 0.4);
}

.customization-modal-header {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(37, 99, 235, 0.2));
  padding: 1.5rem;
  border-bottom: 2px solid #3b82f6;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 22px 22px 0 0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.customization-modal-title {
  font-family: 'Orbitron', sans-serif;
  font-size: 1.8rem;
  font-weight: 900;
  color: #3b82f6;
  text-shadow: 0 0 20px rgba(59, 130, 246, 0.6);
  margin: 0;
}

.customization-modal-close {
  background: rgba(239, 68, 68, 0.2);
  border: 2px solid #ef4444;
  color: #ef4444;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  font-size: 1.5rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

.customization-modal-close:hover {
  background: #ef4444;
  color: #ffffff;
  transform: rotate(90deg);
}

.customization-modal-content {
  padding: 2rem;
}

.customization-section {
  margin-bottom: 2rem;
  padding: 1.5rem;
  background: rgba(59, 130, 246, 0.05);
  border: 2px solid rgba(59, 130, 246, 0.2);
  border-radius: 15px;
}

.customization-section-title {
  color: #3b82f6;
  font-size: 1.2rem;
  font-weight: 700;
  margin: 0 0 1rem 0;
  font-family: 'Montserrat', sans-serif;
}

.customization-input {
  width: 100%;
  padding: 0.8rem;
  background: rgba(59, 130, 246, 0.1);
  border: 2px solid rgba(59, 130, 246, 0.3);
  border-radius: 10px;
  color: #ffffff;
  font-size: 0.95rem;
  font-family: 'Montserrat', sans-serif;
  transition: all 0.3s ease;
}

.customization-input:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 15px rgba(59, 130, 246, 0.3);
}

.customization-hint {
  color: rgba(255, 255, 255, 0.5);
  font-size: 0.85rem;
  margin: 0.5rem 0 0 0;
  font-style: italic;
}

/* Color Picker */
.customization-color-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

.customization-color-item label {
  display: block;
  color: rgba(255, 255, 255, 0.8);
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
  font-weight: 600;
}

.color-picker-wrapper {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 0.5rem;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 10px;
}

.color-picker {
  width: 60px;
  height: 40px;
  border: 2px solid rgba(59, 130, 246, 0.5);
  border-radius: 8px;
  cursor: pointer;
}

.color-value {
  color: #3b82f6;
  font-family: 'Courier New', monospace;
  font-weight: 700;
}

/* Logo Upload */
.logo-upload-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.logo-preview {
  width: 150px;
  height: 150px;
  border: 3px solid #3b82f6;
  border-radius: 15px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
}

.logo-preview img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.logo-upload-input {
  display: none;
}

.logo-upload-button {
  padding: 0.8rem 2rem;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  border-radius: 12px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
}

.logo-upload-button:hover {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  transform: translateY(-2px);
  box-shadow: 0 5px 20px rgba(59, 130, 246, 0.4);
}

/* Social Links Grid */
.social-links-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

.social-link-item label {
  display: block;
  color: rgba(255, 255, 255, 0.8);
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
  font-weight: 600;
}

/* Messages */
.customization-message {
  padding: 1rem;
  border-radius: 10px;
  margin: 1.5rem 0;
  text-align: center;
  font-weight: 600;
}

.customization-message-success {
  background: rgba(16, 185, 129, 0.2);
  border: 2px solid #10b981;
  color: #10b981;
}

.customization-message-error {
  background: rgba(239, 68, 68, 0.2);
  border: 2px solid #ef4444;
  color: #ef4444;
}

/* Actions */
.customization-modal-actions {
  display: flex;
  gap: 1rem;
  margin-top: 2rem;
}

.customization-btn {
  flex: 1;
  padding: 1rem;
  border-radius: 12px;
  font-size: 0.95rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
  font-family: 'Montserrat', sans-serif;
}

.customization-btn-primary {
  background: linear-gradient(135deg, #10b981, #059669);
  color: #ffffff;
  box-shadow: 0 5px 20px rgba(16, 185, 129, 0.3);
}

.customization-btn-primary:hover {
  background: linear-gradient(135deg, #059669, #047857);
  box-shadow: 0 8px 25px rgba(16, 185, 129, 0.5);
  transform: translateY(-2px);
}

.customization-btn-reset {
  background: rgba(251, 191, 36, 0.2);
  color: #fbbf24;
  border: 2px solid #fbbf24;
}

.customization-btn-reset:hover {
  background: #fbbf24;
  color: #000000;
}

.customization-btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.8);
  border: 2px solid rgba(255, 255, 255, 0.3);
}

.customization-btn-secondary:hover {
  background: rgba(255, 255, 255, 0.2);
  border-color: rgba(255, 255, 255, 0.5);
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .customization-modal-title {
    font-size: 1.4rem;
  }
  
  .customization-modal-content {
    padding: 1.5rem;
  }
  
  .customization-color-grid,
  .social-links-grid {
    grid-template-columns: 1fr;
  }
  
  .customization-modal-actions {
    flex-direction: column;
  }
}
