.admin-customization-panel{padding:2rem;background:rgba(0,0,0,.9);border-radius:15px;color:#fff}.customization-header{margin-bottom:2rem}.customization-header h2{color:#3b82f6;margin:0 0 .5rem 0;font-size:1.8rem}.customization-header p{color:rgba(255,255,255,.7);margin:0}.customization-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(300px,1fr));gap:1.5rem;margin-bottom:2rem}.custom-card{background:rgba(59,130,246,.1);border:2px solid rgba(59,130,246,.3);border-radius:12px;padding:1.5rem}.custom-card h3{color:#3b82f6;margin:0 0 1rem 0;font-size:1rem;font-weight:700}.custom-card input[type=text],.custom-card input[type=email]{width:100%;padding:.8rem;background:rgba(0,0,0,.3);border:2px solid rgba(255,255,255,.2);border-radius:8px;color:#fff;font-size:.95rem;margin-bottom:.5rem}.custom-card input:focus{outline:0;border-color:#3b82f6}.hint{display:block;color:rgba(255,255,255,.5);font-size:.85rem;font-style:italic}.color-input-group{display:flex;gap:.5rem;margin-bottom:.5rem}.color-input-group input[type=color]{width:60px;height:40px;border:2px solid rgba(59,130,246,.5);border-radius:8px;cursor:pointer;background:transparent}.color-input-group input[type=text]{flex:1}.logo-card{text-align:center}.logo-preview-admin{width:120px;height:120px;margin:1rem auto;border:3px solid #3b82f6;border-radius:12px;overflow:hidden;display:flex;align-items:center;justify-content:center;background:rgba(0,0,0,.3)}.logo-preview-admin img{max-width:100%;max-height:100%;object-fit:contain}.upload-btn{display:inline-block;padding:.8rem 1.5rem;background:linear-gradient(135deg,#3b82f6,#2563eb);color:#fff;border-radius:8px;cursor:pointer;font-weight:700;transition:.3s;margin-bottom:.5rem}.upload-btn:hover{background:linear-gradient(135deg,#2563eb,#1d4ed8);transform:translateY(-2px)}.admin-custom-message{padding:1rem;border-radius:8px;margin-bottom:1.5rem;font-weight:600;text-align:center}.admin-custom-message.success{background:rgba(16,185,129,.2);border:2px solid #10b981;color:#10b981}.admin-custom-message.error{background:rgba(239,68,68,.2);border:2px solid #ef4444;color:#ef4444}.customization-actions{display:flex;gap:1rem;justify-content:center}.btn-save{flex:1;max-width:250px;padding:1rem 2rem;background:linear-gradient(135deg,#10b981,#059669);border:none;color:#fff;border-radius:12px;font-size:1rem;font-weight:700;cursor:pointer;transition:.3s}.btn-save:hover{background:linear-gradient(135deg,#059669,#047857);transform:translateY(-2px);box-shadow:0 10px 25px rgba(16,185,129,.4)}.btn-reset{flex:1;max-width:250px;padding:1rem 2rem;background:rgba(251,191,36,.2);border:2px solid #fbbf24;color:#fbbf24;border-radius:12px;font-size:1rem;font-weight:700;cursor:pointer;transition:.3s}.btn-reset:hover{background:#fbbf24;color:#000}@media (max-width:768px){.customization-grid{grid-template-columns:1fr}.customization-actions{flex-direction:column}.btn-save,.btn-reset{max-width:100%}}